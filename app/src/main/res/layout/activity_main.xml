<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vitmap.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To VIT Map"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "college building name"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"/>

    <RadioGroup
        android:id="@+id/block_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <RadioButton
            android:id="@+id/smv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="SMV"/>
        <RadioButton
            android:id="@+id/sjt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="SJT"/>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="room number"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/block_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Nearest Room Number"
        />
    <EditText
        android:id="@+id/block_dest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Destination Room Number"/>


    <Button
        android:id="@+id/block_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="SHOW BLOCK LAYOUT"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:textSize="15dp"
        android:onClick="showBlock"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get To The Building Using Google Maps"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/maps_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google Maps"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:padding="20dp"
            android:textSize="15dp"
            android:onClick="showMaps"/>
</LinearLayout>